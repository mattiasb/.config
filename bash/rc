# -*- mode: sh -*-

### Configuration

# History
shopt -s histappend

# Disable C-s / C-q for XOFF/XON
stty start undef
stty stop undef

### Load stuff

# Global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# Machine local scripts
if [ -f "${HOME}/.config/bash/rc.local" ]; then
    # shellcheck source=/dev/null
    . "${HOME}/.config/bash/rc.local"
fi

# Functions
# shellcheck source=./functions
. "${HOME}/.config/bash/functions"
if [ -f "${HOME}/.config/bash/functions.work" ]; then
    # shellcheck source=/dev/null
    . "${HOME}/.config/bash/functions.work"
fi

# Aliases
# shellcheck source=./aliases
. "${HOME}/.config/bash/aliases"

# Environment
for file in "${HOME}/.config/environment.d/"*.conf; do
    while IFS= read -r line
    do
        if [[ ! "$line" =~ ^[[:space:]]*# ]]; then
            eval "export ${line}" &>/dev/null
        fi
    done < "${file}"
done

# Set up PS1
case "${TERM}" in
    *-256color|eat-truecolor)
        if systemctl is-active --user powerline.service >/dev/null; then
            . /usr/share/powerline/bash/powerline.sh
        else
            function powerline-go-prompt {
                PS1="$(powerline-go -error $? -jobs "$(jobs -p | wc -l)")"
            }
            PROMPT_COMMAND="powerline-go-prompt; $PROMPT_COMMAND"
        fi
        ;;
    *)
        # shellcheck source=/home/mattiasb/.config/bash/old-prompt.sh
        . ~/.config/bash/old-prompt.sh ;;
esac

if [ -n "${EAT_SHELL_INTEGRATION_DIR}" ]; then
    # shellcheck source=/dev/null
    source "${EAT_SHELL_INTEGRATION_DIR}/bash"
fi

# Completions
for comp in "${HOME}/.config/bash_completion.d/"*; do
    if [ -f "${comp}" ] ; then
        # shellcheck source=/dev/null
        . "${comp}"
    fi
done

### Complete Aliases
if [ "$(type -t _complete_alias)" = "function" ]; then
    for a in $(alias | cut -d "=" -f 1 | cut -d " " -f 2); do
        complete -F _complete_alias "$a"
    done
fi

### FZF
. /usr/share/fzf/shell/key-bindings.bash
# Take back M-c from fzf
bind '"\ec":capitalize-word'
